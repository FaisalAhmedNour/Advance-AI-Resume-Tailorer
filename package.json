{
    "name": "resume-tailorer-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "services/*"
    ],
    "scripts": {
        "dev": "pnpm --parallel -r run dev",
        "test": "pnpm -r run test",
        "lint": "pnpm -r run lint",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "install:all": "pnpm install"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0"
    }
}